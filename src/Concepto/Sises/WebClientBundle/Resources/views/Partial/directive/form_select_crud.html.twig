{# Input fields - disabled #}
<div class="form-group" data-ng-class="{'has-error': hasErrors(), 'required': isRequired()}">
    <label class="col-lg-4 control-label" {% verbatim%}for="{{tt.id}}"{%endverbatim%}
           data-ng-bind="tt.label"></label>
    <div class="col-lg-8">
        <div class="input-group">
            <input
                   data-ng-model="tt.selectedElement"
                   class="form-control" type="text" {% verbatim%}id="{{tt.id}}"{%endverbatim%}
                    />
            <div class="input-group-btn">
                <button type="button" class="btn btn-primary"
                        tabindex="-1"
                        data-ng-click="open()">
                    <i class="glyphicon glyphicon-open"></i>
                </button>
                {#
                <button type="button" class="btn btn-default" tabindex="-1">
                    <i class="glyphicon glyphicon-remove"></i>
                </button>
                #}
            </div>
        </div>
        <p class="help-block"
           data-ng-repeat="error in getErrors()"
           data-ng-bind="error"></p>
    </div>
</div>

{# Show the modal #}
<div data-sises-modalize="tt.handler" {% verbatim %}data-title="{{label}}"{% endverbatim%}>
    <div data-ng-switch data-on="logic">
        {# Formulario new #}
        <div data-ng-switch-when="new">
            <div class="row">
                <div class="col-lg-12">
                    <div class="subactions pull-right">
                        <button class="btn btn-default" data-ng-click="list()">
                            <i class="glyphicon glyphicon-list"></i> Volver al listado
                        </button>
                        <button class="btn btn-primary" data-ng-click="save()">
                            <i class="glyphicon glyphicon-save"></i> Guardar
                        </button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12" data-ng-include="template(property + '/form')"></div>
            </div>
        </div>

        {# Formulario update #}
        <div data-ng-switch-when="update">
            <div class="row">
                <div class="col-lg-12">
                    <div class="subactions pull-right">
                        <button class="btn btn-default" data-ng-click="list()">
                            <i class="glyphicon glyphicon-list"></i> Volver al listado
                        </button>
                        <button class="btn btn-primary" data-ng-click="update()">
                            <i class="glyphicon glyphicon-save"></i> Actualizar
                        </button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12" data-ng-include="template(property + '/form')"></div>
            </div>
        </div>

        {# Listado #}
        <div data-ng-switch-when="list">
            <div class="row">
                <div class="col-lg-6">
                    <form class="inline-form" action="">
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                    <span data-ng-bind="tt._filter.label"></span>
                                    <span class="caret"></span></button>
                                <ul class="dropdown-menu" role="menu">
                                    <li data-ng-repeat="filter in tt.filters">
                                        <a href data-ng-bind="tt.filter.label" data-ng-click="changeFilter(filter)"></a>
                                    </li>
                                </ul>
                            </div>

                            <label {% verbatim%}for="filter_{{id}}"{%endverbatim%} class="sr-only">Filtro</label>
                            <input data-ng-model="tt.filter_value"
                                   class="form-control" type="text" {% verbatim%}id="filter_{{id}}"{%endverbatim%}/>
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-primary btn-icon"
                                        tabindex="-1"
                                        data-ng-click="query()">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-2">
                    <button type="button" class="btn btn-default"
                            tabindex="-1"
                            data-ng-click="clearFilter()">
                        <i class="glyphicon glyphicon-refresh"></i> Limpiar
                    </button>
                </div>
                <div class="col-lg-4" data-ng-if="!readOnly">
                    <button class="btn btn-primary pull-right" data-ng-click="add()">
                        <i class="glyphicon glyphicon-plus-sign"></i> Agregar
                    </button>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 table-wrapper">
                    <table class="table table-hover table-condensed">
                        <thead>
                        <tr data-ng-include="template(property  + '/list_header')"></tr>
                        </thead>
                        <tbody ng-if="elements.length == 0">
                        <tr>
                            <td colspan="2">
                                No existen elementos
                            </td>
                        </tr>
                        </tbody>
                        <tbody ng-if="elements.length > 0">
                        <tr data-ng-repeat="single in elements"
                            data-ng-include="template(property + '/list_content')">
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row" data-ng-if="pager.last > 1">
                <div class="col-lg-12">
                    <ul class="pager">
                        <li><a href data-ng-click="previousPage()">Anterior</a></li>
                        <li></li>
                        <li data-ng-bind="showing()"></li>
                        <li></li>
                        <li><a href data-ng-click="nextPage()">Siguiente</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>