<fieldset>
    <legend>Usuario</legend>
    <div data-ng-if="!element.id">
        <p>Debe primero guardar para asignar el usuario</p>
    </div>
    <div data-sises-form="usuario" data-autocomplete="off" data-ng-if="element.id">
        <div data-sises-form-static="usuario.username"
             data-ng-if="loaded"
             data-label="'Nombre de usuario'"></div>

        <div data-sises-form-input="username"
             data-required="true"
             data-ng-if="!loaded"
             data-disable-autofill="true"
             data-placeholder="'Nombre de usuario'"
             data-autocomplete="'off'"
             data-label="'Nombre'"></div>
        <div class="col-lg-8 col-lg-offset-4" data-ng-if="!canSave">
            <p class="text-danger">Nombre de usuario en uso</p>
        </div>
        <div data-sises-form-input="email"
             data-required="true"
             data-type="email"
             data-placeholder="'usuario@ejemplo.com'"
             data-label="'Correo (email)'"></div>
        <div data-sises-compound="usuario.password">
            <div data-sises-form-input="first"
                 data-type="'password'"
                 data-disable-autofill="true"
                 data-autocomplete="'off'"
                 data-label="'Contraseña'"></div>
            <div data-sises-form-input="second"
                 data-type="'password'"
                 data-disable-autofill="true"
                 data-autocomplete="'off'"
                 data-label="'Repetir contraseña'"></div>
        </div>
        <div data-sises-form-input="activo"
             data-type="'checkbox'"
             data-label="'Activo?'"></div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-4">
                <button class="btn btn-default"
                        data-ng-if="loaded"
                        data-ng-disabled="!canSave"
                        data-ng-click="save()">
                    <i class="glyphicon glyphicon-save"></i> Actualizar usuario
                </button>
                <button class="btn btn-default"
                        data-ng-if="!loaded"
                        data-ng-disabled="!canSave"
                        data-ng-click="save()">
                    <i class="glyphicon glyphicon-save"></i> Guardar usuario
                </button>
            </div>
        </div>
    </div>
</fieldset>