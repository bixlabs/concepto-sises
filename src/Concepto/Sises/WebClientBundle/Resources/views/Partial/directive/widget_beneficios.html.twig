<fieldset>
    <legend>Beneficios</legend>
    <button class="btn btn-info" data-ng-click="add()">
        <i class="glyphicon glyphicon-plus-sign"></i> Agregar beneficio
    </button>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Contrato</th>
            <th>Lugar entrega</th>
            <th>Nombre</th>
        </tr>
        </thead>
        <tbody>
        <tr data-ng-repeat="beneficio in elements"
            data-ng-click="edit(beneficio)"
            class="pointer">
            <td>
                {# Non editable #}
                <span data-ng-bind="beneficio.nombre"
                      style="padding-left: 13px"></span>

            </td>
            <td width="20%">
                {# Non editable #}
                <button class="btn btn-warning" title="Elmina este beneficio"
                        data-ng-click="removeElement(beneficio)">
                    <i class="glyphicon glyphicon-remove-sign"></i>
                </button>
            </td>
        </tr>
        </tbody>
    </table>
</fieldset>

<div data-sises-modalize="handler" data-title="Agregar beneficio">
    <div data-sises-form="element" data-errors="errors">

        <div data-sises-form-select="contrato"
             data-label="'Seleccione contrato'"
             data-options="contratos"
             data-options-key="id"
             data-options-label="nombre"
             data-required="true"></div>

        <div data-sises-form-select-crud="servicio"
             data-parent-id="element.contrato"
             data-label="'Servicio'"
             data-show-property="nombre"
             data-crud="servicio"></div>

        <div data-sises-form-select-crud="lugar"
             data-label="'Lugar entrega'"
             data-show-property="nombre_detallado"
             data-crud="lugar"></div>
    </div>
</div>