{% verbatim %}
<div class="form-group" data-ng-class="{'has-error': hasErrors(), 'required': isRequired()}">
    <label for="{{formProperties.id}}_select" class="col-lg-4 control-label">{{formProperties.label}}</label>
    <div class="col-lg-8">
        <select class="form-control"
                data-ng-if="optionsString"
                data-chosen
                data-disable-search="true"
                data-width="'100%'"
                data-ng-model="form.model[property]"
                data-ng-options="{{ optionsString }}"
                id="{{formProperties.id}}_select"></select>
        <p class="help-block"
           data-ng-repeat="error in getErrors()"
           data-ng-bind="error"></p>
    </div>
</div>
{% endverbatim %}