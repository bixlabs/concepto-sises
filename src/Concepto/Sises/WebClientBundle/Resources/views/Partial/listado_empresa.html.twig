<div class="row">
    <div class="col-lg-7">
        <h2>Empresas</h2>
    </div>
    <div class="col-lg-5">
        <div class="actions pull-right">
            <button class="btn btn-primary"
                    data-ng-click="go('/empresas/nueva')">Nueva empresa</button>
        </div>
    </div>
</div>

<table class="table table-hover table-condensed">
    <thead>
    <tr>
        <th width="20%">NIT</th>
        <th width="50%">Nombre empresa</th>
        <th></th>
    </tr>
    </thead>
    <tbody ng-if="empresas.length == 0">
        <tr>
            <td colspan="2">
                No existen empresas
            </td>
        </tr>
    </tbody>
    <tbody ng-if="empresas.length > 0">
        <tr data-ng-repeat="empresa in empresas">
            <td data-ng-bind="empresa.nit"></td>
            <td data-ng-bind="empresa.nombre"></td>
            <td>
                <button class="btn btn-primary"
                        data-ng-click="go('/empresas/' + empresa.id)">Ver detalles</button>
            </td>
        </tr>
    </tbody>
</table>

