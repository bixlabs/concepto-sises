<div class="row">
    <div class="col-lg-7">
        <h2>Contratos</h2>
    </div>
    <div class="col-lg-5">
        <div class="actions pull-right">
            <button class="btn btn-primary"
                    data-ng-click="go('/contratos/nuevo')">Nuevo contrato</button>
        </div>
    </div>
</div>

<table class="table table-hover table-condensed">
    <thead>
    <tr>
        <th width="20%">Resolucion</th>
        <th width="50%">Nombre contrato</th>
        <th></th>
    </tr>
    </thead>
    <tbody ng-if="contratos.length == 0">
    <tr>
        <td colspan="2">
            No existen contratos
        </td>
    </tr>
    </tbody>
    <tbody ng-if="contratos.length > 0">
    <tr data-ng-repeat="contrato in contratos">
        <td data-ng-bind="contrato.resolucion"></td>
        <td data-ng-bind="contrato.nombre"></td>
        <td>
            <button class="btn btn-primary"
                    data-ng-click="go('/contratos/' + contrato.id)">Ver detalles</button>
        </td>
    </tr>
    </tbody>
</table>

