<div data-sises-form="element" data-errors="errors">
    <div class="row">
        <div class="col-lg-7">
            <fieldset>
                <legend>Datos básicos</legend>

                <div data-sises-form-input="nombre"
                     data-placeholder="'Nombre o razón social'"
                     data-required="true"
                     data-label="'Nombre empresa'"></div>

                <div data-sises-form-input="nit"
                     data-required="true"
                     data-placeholder="'800.000.000-1'"
                     data-label="'NIT'"></div>

                <div data-sises-form-input="telefono"
                     data-label="'Número de teléfono'"></div>

                <div data-sises-form-input="direccion"
                     data-label="'Dirección postal'"></div>

                <div data-sises-form-email="email"
                     data-label="'Correo electrónico'"></div>

                <div data-sises-form-input="privada"
                     data-type="'checkbox'"
                     data-required="true"
                     data-label="'Empresa privada'"></div>
                <div class="col-lg-8  col-lg-offset-4">
                    <p class="help-block">
                        Las empresas privadas solo estan disponibles para el administrador
                    </p>
                </div>
            </fieldset>

            <fieldset>
                <legend>Persona a cargo</legend>
                <div data-sises-form-select-crud="encargado"
                     data-label="'Seleccione encargado'"
                     data-show-property="nombre_detallado"
                     data-crud="encargado"></div>
            </fieldset>
        </div>
        <div class="col-lg-5">
            <fieldset>
                <legend>Logo empresa</legend>
                <div data-sises-form-image="logo"></div>
            </fieldset>
            <div data-sises-widget-archivos="element.archivos"></div>
        </div>
    </div>
</div>