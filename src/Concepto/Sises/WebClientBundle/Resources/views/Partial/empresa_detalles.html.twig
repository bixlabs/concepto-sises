<div class="row">
    <div class="col-lg-7">
        <h2>"<strong data-ng-bind="empresa.nombre"></strong>"</h2>
    </div>
    <div class="col-lg-5">
        <div class="actions pull-right">
            <button class="btn btn-default" data-ng-click="go('empresas.listado')">
                <i class="glyphicon glyphicon-list"></i> Volver al listado
            </button>
            <button class="btn btn-primary"
                    data-ng-disabled="!canSave()"
                    data-ng-click="guardarEmpresa()">
                <i class="glyphicon glyphicon-save"></i> Guardar
                    </button>
            <button class="btn btn-danger"
                    data-ng-click="eliminarEmpresa()">
                <i class="glyphicon glyphicon-remove-sign"></i> Eliminar
                    </button>
        </div>
    </div>
</div>
<div data-ng-include="template('empresa_form')"></div>

