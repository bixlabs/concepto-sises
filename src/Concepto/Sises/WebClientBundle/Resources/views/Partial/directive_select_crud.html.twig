{# Input fields - disabled #}
<div class="form-group" data-ng-class="{'has-error': hasError(selectCrud)}">
    <label class="col-lg-4 control-label" for="'select_crud_' + selectCrud"
           data-ng-bind="label"></label>
    <div class="col-lg-8">
        <div class="input-group">
            <input name="selectCrud + ''"
                   data-ng-model="selectedElement"
                   class="form-control" type="text" id="'select_crud_' + selectCrud"
                   readonly/>
            <div class="input-group-btn">
                <button type="button" class="btn btn-default"
                        tabindex="-1"
                        data-ng-click="open()">
                    <i class="glyphicon glyphicon-open"></i>
                </button>
                {#
                <button type="button" class="btn btn-default" tabindex="-1">
                    <i class="glyphicon glyphicon-remove"></i>
                </button>
                #}
            </div>
        </div>
        <p class="help-block"
           data-ng-repeat="error in errors[selectCrud].errors"
           data-ng-bind="error"></p>
    </div>
</div>

{# Show the modal #}
<div data-sises-modalize="handler" {% verbatim %}data-title="{{label}}"{% endverbatim%}>
    <div data-ng-switch data-on="logic">
        <div data-ng-switch-when="list">

            <div class="row">
                <div class="col-lg-12">
                    <button class="btn btn-primary pull-right" data-ng-click="add()">
                        <i class="glyphicon glyphicon-plus-sign"></i> Agregar
                    </button>
                </div>
            </div>

            <table class="table table-hover table-condensed">
                <thead>
                <tr data-ng-include="template(selectCrud  + '/list_header')"></tr>
                </thead>
                <tbody ng-if="elements.length == 0">
                <tr>
                    <td colspan="2">
                        No existen elementos
                    </td>
                </tr>
                </tbody>
                <tbody ng-if="elements.length > 0">
                <tr data-ng-repeat="single in elements"
                    data-ng-include="template(selectCrud + '/list_content')">
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>