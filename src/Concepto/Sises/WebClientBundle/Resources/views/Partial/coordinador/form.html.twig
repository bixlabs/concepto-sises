<div class="row">
    <div data-sises-form="element" data-errors="errors">
        <div class="col-lg-6">
            <fieldset>
                <legend>Datos básicos</legend>

                <div data-sises-form-select="contrato"
                     data-label="'Seleccione contrato'"
                     data-options="'contrato'"
                     data-options-key="id"
                     data-options-label="nombre"
                     data-required="true"></div>

                <div data-sises-form-select-crud="persona"
                     data-label="'Persona'"
                     data-required="true"
                     data-show-property="nombre_completo"
                     data-crud="persona"></div>
            </fieldset>
            <fieldset>
                <legend>Datos financieros</legend>

                <div data-sises-form-select-crud="entidad_financiera"
                     data-label="'Entidad financiera'"
                     data-show-property="nombre_detallado"
                     data-crud="entidad_financiera"></div>

                <div data-sises-form-input="numero_cuenta"
                     data-label="'Número de cuenta'"></div>

                <div data-sises-form-text-area="observaciones_financieras"
                     data-label="'Observaciones'"></div>
            </fieldset>
        </div>

        <div class="col-lg-6">
            <fieldset>
                <legend>Asignaciones</legend>
                <div data-sises-form-embed-collection="element.asignacion"
                     data-ng-if="element.contrato"
                     data-button-label="Agregar asignacion"
                     data-table-field-servicio="Servicio"
                     data-table-field-lugar="Lugar"
                     data-transform-parent-servicio="element.contrato"
                     data-table-transform-servicio="servicio,nombre_detallado"
                     data-table-transform-lugar="lugar,nombre_detallado"
                     data-unique-test="['servicio', 'lugar']">

                    <div data-sises-form-select-crud="servicio"
                         data-parent-id="element.contrato"
                         data-label="'Servicio'"
                         data-show-property="nombre"
                         data-crud="servicio"></div>

                    <div data-sises-form-select-crud="lugar"
                         data-label="'Lugar entrega'"
                         data-show-property="nombre_detallado"
                         data-crud="lugar"></div>
                </div>
            </fieldset>
            <div data-sises-widget-archivos="element.archivos"></div>
        </div>
    </div>

</div>