{% extends 'SisesWebClientBundle:ModuleGenerator:list.html.twig' %}

{% block title %}Personal{% endblock %}
{% block actions %}
    {% set params = {'name':'list', 'singular': 'Personal'} %}
    {{render(controller('SisesWebClientBundle:Web:actions', params))}}
{% endblock %}

{% block list_header %}
    <th width="20%">Documento</th>
    <th width="20%">Cargo</th>
    <th width="50%">Nombre completo</th>
    <th></th>
{% endblock %}

{% block no_element %}
    No existen personal
{% endblock %}

{% block list_content %}
    <td data-ng-bind="single.persona.documento"></td>
    <td data-ng-bind="single.cargo.nombre"></td>
    <td data-ng-bind="single.persona.nombre_completo"></td>
    <td>
        {% set params = {'name':'edit', 'singular': 'Single'} %}
        {{render(controller('SisesWebClientBundle:Web:actions', params))}}
    </td>
{% endblock %}

